@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        @foreach (var blog in ViewBag.BlogList)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card"></div>>
                <img src="@blog.Resim" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@blog.Baslik</h5>
                    <p class="card-text">@blog.Aciklama</p>
                    <p class="card-text"><small class="text-body-secondary">@DateTime.Now</small></p>

                </div>
            </div>

        }
    </div>
</div>
